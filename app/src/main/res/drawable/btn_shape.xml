<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:topLeftRadius="100dp"
                android:topRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="100dp"
                />
            <gradient
                android:angle="135"
                android:centerX="35%"
                android:centerColor="#47A891"
                android:startColor="#E8E8E8"
                android:endColor="#485D78"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />

            <stroke
                android:width="2dp"
                android:color="#878787"
                />

        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:topLeftRadius="100dp"
                android:topRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="100dp"
                />
            <gradient
                android:angle="135"
                android:centerX="35%"
                android:centerColor="#47A891"
                android:startColor="#E8E8E8"
                android:endColor="#88B0E3"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <stroke
                android:width="2dp"
                android:color="#878787"
                />
        </shape>
    </item>
</selector>